<% provide(:title, @project.name) %>
<section id="projects-page">
  <header id="overview" class="jumbotron subhead">
    <h1><%= @project.name %></h1>
    <p class="lead"><%= link_to @project.url, @project.url, :target => "_blank" %></p>
  </header>

  <ul class="breadcrumb">
    <li>
      <%= link_to "Home", root_path %> <span class="divider">/</span>
    </li>
    <li>
      <%= link_to "Projects", projects_path %> <span class="divider">/</span>
    </li>
    <li class="active">
      <%= link_to @project.name, @project %>
    </li>
  </ul>

  <section id="project-issues">
    <header>
      <%= link_to t(:create_issue), "#new_issue", :class => "btn btn-info", :id => "create-issue" %>
      <h1>Issues</h1>
    </header>
    
    <ul id="issues-list">
    <% @project.issues.each do |issue| %>
      <li><%= issue.content %></li>
    <% end %>
    </ul>

    <%= render "issues/form" %>
  </section>
  
  <footer>
    <% if @project.user == current_user and @project.status != "archived" %>
    <p><%= link_to t(:archive_project), archive_project_path(@project) , :class => "btn btn-disabled archive-project" %></p>
    <% end %>
  </footer>
  
</section>