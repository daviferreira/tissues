<%= form_for(@project, :html => { :class => "form-horizontal" }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <fieldset>
  <div class="control-group">
    <%= f.label t("projects.description"), :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :name, :class => "input-xxlarge" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label t("projects.url"), :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :url, :class => "input-xlarge" %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit t("projects.save"), :class => "btn btn-primary" %>
  </div>
<% end %>