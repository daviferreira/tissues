<% provide(:title, t("projects.title")) %>

<section id="projects-page">
  <header id="overview" class="jumbotron subhead">
    <h1><%= t("projects.title") %></h1>
  </header>

  <ul class="breadcrumb">
    <li>
      <%= link_to t("home.title"), root_path %> <span class="divider">/</span>
    </li>
    <li class="active">
      <%= link_to t("projects.title"), projects_path %>
    </li>
  </ul>

  <% if @projects.any? %>
  <div id="projects" class="clearfix">
    <% @projects.each do |project| %>
      <%= render project %>
    <% end %>
    <%= page_navigation_links @projects %>
  </div>
  <% else %>
  <!-- create project teaser -->
  <% end %>
  
</section>