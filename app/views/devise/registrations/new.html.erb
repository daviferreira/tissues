<% provide(:title, 'Create an Account') %>

<section id="projects-page">
  <header id="overview" class="jumbotron subhead">
    <h1>Sign up</h1>
    <p class="lead">... and become a bug hunter.</p>
  </header>

  <ul class="breadcrumb">
    <li>
      <%= link_to "Home", root_path %> <span class="divider">/</span>
    </li>
    <li class="active">
      <%= link_to "Create an account", new_user_registration_path %>
    </li>
  </ul>
  
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal" }) do |f| %>
    <%= devise_error_messages! %>

    <fieldset>
      <div class="control-group">
        <%= f.label :name, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :name %>
        </div>
      </div>
        

      <div class="control-group">
        <%= f.label :email, :class => "control-label" %>
        <div class="controls">
          <%= f.email_field :email %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :password, :class => "control-label" %>
        <div class="controls">
          <%= f.password_field :password %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :password_confirmation, :class => "control-label" %>
        <div class="controls">
          <%= f.password_field :password_confirmation %>
        </div>
      </div>

    </fieldset>
    

    <div class="form-actions"><%= f.submit "Sign up", :class => "btn btn-primary" %></div>
    
    
    <div class="control-group">
      <div class="controls">
        <%= render "links" %>
      </div>
    </div>
  <% end %>
  
</section>
