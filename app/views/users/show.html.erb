<% provide(:title, @user.name) %>

<section id="user-page">
  <header id="overview" class="jumbotron subhead">
    <%= image_tag(@user.avatar.url(:medium), :class => "avatar") %>
    <h1><%= @user.name %></h1>
    <p class="lead"><%= mail_to @user.email %></p>
  </header>

  <div class="well">
    <p><%= pluralize @user.projects.count, "project" %>, <%= pluralize @user.issues.count, "issue" %></p>
  </div>

  <% if @user.projects.any? %>
    <ul class="projects">
      <%= render @projects %>
    </ul>
    <%= page_navigation_links @projects %>
  <% end %>
</section>